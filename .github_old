.github/workflows/update-monitor.yml
name: Update Monitor Page

on:
  schedule:
    - cron: "*/10 * * * *"  # 10分ごとに実行
  workflow_dispatch:        # 手動実行も可能

jobs:
  update-monitor:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Update monitor.html timestamp
        run: |
          echo "<!-- Updated: $(date -u) -->" > monitor.html
          echo "<html><body><h1>SPIRIA Monitor</h1><p>Last update: $(date -u)</p></body></html>" >> monitor.html

      - name: Commit and push changes
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add monitor.html
          git commit -m "Auto-update monitor.html"
          git push
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
